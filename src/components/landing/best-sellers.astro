---
const products = [
  { id: 1, name: "Essential Crew Neck", price: 35.00, slug: "essential-crew-neck" },
  { id: 2, name: "Relaxed Fit Jeans", price: 95.00, slug: "relaxed-fit-jeans" },
  { id: 3, name: "Linen Shirt", price: 65.00, slug: "linen-shirt" },
  { id: 4, name: "Everyday Tote", price: 85.00, slug: "everyday-tote" },
];
---

<section class="py-12 md:py-16 border-t">
  <div class="container mx-auto px-4">
    <div class="flex items-center justify-between mb-6">
      <h2 class="text-lg font-medium">Best Sellers</h2>
      <a href="/collections/best-sellers" class="text-sm text-muted-foreground underline underline-offset-4">
        View all
      </a>
    </div>
    <div class="grid grid-cols-2 md:grid-cols-4 gap-x-4 gap-y-8">
      {products.map((product) => (
        <a href={`/products/${product.slug}`} class="group">
          <div class="aspect-[3/4] bg-muted mb-3">
            <div class="w-full h-full flex items-center justify-center text-muted-foreground/30">
              <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1" stroke-linecap="round" stroke-linejoin="round">
                <rect width="18" height="18" x="3" y="3" rx="2" ry="2"></rect>
                <circle cx="9" cy="9" r="2"></circle>
                <path d="m21 15-3.086-3.086a2 2 0 0 0-2.828 0L6 21"></path>
              </svg>
            </div>
          </div>
          <h3 class="text-sm">{product.name}</h3>
          <p class="text-sm text-muted-foreground mt-1">${product.price.toFixed(2)}</p>
        </a>
      ))}
    </div>
  </div>
</section>
