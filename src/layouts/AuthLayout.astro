---
import "../styles/global.css";

interface Props {
  title?: string;
}

const { title = "Authentication" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title} | usestore</title>
  </head>
  <body>
    <div class="min-h-screen flex flex-col">
      <header class="border-b">
        <div class="container mx-auto px-4 h-14 flex items-center">
          <a href="/">
            <img src="/logo.svg" alt="usestore" class="h-6" />
          </a>
        </div>
      </header>
      <main class="flex-1 flex items-center justify-center px-4 py-12 md:py-16">
        <slot />
      </main>
      <footer class="border-t py-8">
        <div class="container mx-auto px-4 text-center text-sm text-muted-foreground">
          &copy; {new Date().getFullYear()} usestore
        </div>
      </footer>
    </div>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
