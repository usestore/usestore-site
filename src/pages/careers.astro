---
import Layout from "@/layouts/Layout.astro";

const positions = [
  {
    title: "Senior Software Engineer",
    department: "Engineering",
    location: "San Francisco, CA",
    type: "Full-time",
    description: "Join our engineering team to build and scale our e-commerce platform. You'll work on everything from frontend experiences to backend systems."
  },
  {
    title: "Product Designer",
    department: "Design",
    location: "Remote",
    type: "Full-time",
    description: "Shape the future of our customer experience. You'll design intuitive interfaces and collaborate closely with engineering and product teams."
  },
  {
    title: "Customer Support Specialist",
    department: "Operations",
    location: "Remote",
    type: "Full-time",
    description: "Be the voice of usestore. Help our customers with orders, returns, and product questions while providing exceptional service."
  },
  {
    title: "Content Marketing Manager",
    department: "Marketing",
    location: "San Francisco, CA",
    type: "Full-time",
    description: "Create compelling content that tells our brand story. You'll manage our blog, email campaigns, and social media content strategy."
  },
  {
    title: "Supply Chain Coordinator",
    department: "Operations",
    location: "Los Angeles, CA",
    type: "Full-time",
    description: "Optimize our supply chain and inventory management. Work with suppliers and logistics partners to ensure smooth operations."
  }
];

const benefits = [
  { title: "Health Insurance", description: "Comprehensive medical, dental, and vision coverage for you and your family." },
  { title: "Flexible PTO", description: "Take the time you need. We trust you to manage your work-life balance." },
  { title: "Remote Friendly", description: "Work from anywhere. We have team members across the globe." },
  { title: "Learning Budget", description: "$1,500 annual budget for courses, conferences, and professional development." },
  { title: "Employee Discount", description: "50% off all usestore products for you and your immediate family." },
  { title: "401(k) Match", description: "We match 100% of your contributions up to 4% of your salary." }
];
---

<Layout title="Careers - usestore">
  <div class="container mx-auto px-4 py-12 md:py-16">
    <!-- Hero -->
    <div class="max-w-3xl mx-auto text-center mb-8">
      <h1 class="text-2xl font-medium">Join Our Team</h1>
      <p class="text-muted-foreground mt-2">
        We're building the future of sustainable fashion. Join a team that's passionate about quality, design, and making a positive impact.
      </p>
    </div>

    <!-- Why Join Us -->
    <section class="mb-12">
      <h2 class="text-lg font-medium text-center mb-6">Why Work at usestore</h2>
      <div class="grid md:grid-cols-2 gap-8 items-center">
        <div class="aspect-video bg-muted h-full flex items-center justify-center text-muted-foreground/30">
          <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1" stroke-linecap="round" stroke-linejoin="round">
            <rect width="18" height="18" x="3" y="3" rx="2" ry="2"></rect>
            <circle cx="9" cy="9" r="2"></circle>
            <path d="m21 15-3.086-3.086a2 2 0 0 0-2.828 0L6 21"></path>
          </svg>
        </div>
        <div class="space-y-4 text-muted-foreground leading-relaxed">
          <p>
            At usestore, we believe great work happens when talented people are given the freedom to do their best. We're a small, focused team where everyone's contribution matters.
          </p>
          <p>
            We value craftsmanship in everything we do, from the clothes we make to the code we write. We move fast but never cut corners on quality.
          </p>
          <p>
            If you're looking for a place where you can have real impact and grow alongside a passionate team, we'd love to hear from you.
          </p>
        </div>
      </div>
    </section>

    <!-- Benefits -->
    <section class="mb-12">
      <h2 class="text-lg font-medium text-center mb-6">Benefits & Perks</h2>
      <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6">
        {benefits.map((benefit) => (
          <div class="border p-6">
            <h3 class="font-medium mb-2">{benefit.title}</h3>
            <p class="text-sm text-muted-foreground">{benefit.description}</p>
          </div>
        ))}
      </div>
    </section>

    <!-- Open Positions -->
    <section>
      <h2 class="text-lg font-medium text-center mb-6">Open Positions</h2>
      {positions.length > 0 ? (
        <div class="max-w-3xl mx-auto space-y-4">
          {positions.map((position) => (
            <div class="border p-6 hover:bg-muted/30 transition-colors">
              <div class="flex flex-col sm:flex-row sm:items-start sm:justify-between gap-4">
                <div>
                  <h3 class="font-medium text-lg">{position.title}</h3>
                  <div class="flex flex-wrap gap-2 mt-2">
                    <span class="text-xs px-2 py-1 bg-muted text-muted-foreground">{position.department}</span>
                    <span class="text-xs px-2 py-1 bg-muted text-muted-foreground">{position.location}</span>
                    <span class="text-xs px-2 py-1 bg-muted text-muted-foreground">{position.type}</span>
                  </div>
                  <p class="text-sm text-muted-foreground mt-3">{position.description}</p>
                </div>
                <button class="shrink-0 py-2 px-4 border border-input text-sm font-medium hover:bg-muted">
                  Apply
                </button>
              </div>
            </div>
          ))}
        </div>
      ) : (
        <div class="text-center py-12 max-w-md mx-auto">
          <p class="text-muted-foreground">
            We don't have any open positions right now, but we're always looking for talented people.
          </p>
        </div>
      )}
    </section>

    <!-- General Application -->
    <div class="max-w-3xl mx-auto mt-12 p-6 bg-muted/30 border text-center">
      <h2 class="text-lg font-medium">Don't see your role?</h2>
      <p class="text-muted-foreground mt-2 mb-6">
        We're always interested in meeting talented people. Send us your resume and we'll keep you in mind for future opportunities.
      </p>
      <a href="mailto:careers@usestore.com" class="inline-block py-2.5 px-6 bg-primary text-primary-foreground text-sm font-medium hover:bg-primary/90">
        Send Your Resume
      </a>
    </div>
  </div>
</Layout>
