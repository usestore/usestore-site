---
import Layout from "@/layouts/Layout.astro";
import { categories } from "@/data/store";

export const prerender = false;
---

<Layout title="Categories - usestore">
  <div class="container mx-auto px-4 py-12 md:py-16">
    <div class="mb-8">
      <h1 class="text-2xl font-medium">Categories</h1>
      <p class="text-sm text-muted-foreground mt-2">Browse by category</p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
      {categories.map((category) => (
        <a
          href={`/categories/${category.slug}`}
          class="group aspect-[4/3] bg-muted relative overflow-hidden"
        >
          <div class="w-full h-full flex items-center justify-center text-muted-foreground/20">
            <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1" stroke-linecap="round" stroke-linejoin="round">
              <rect width="18" height="18" x="3" y="3" rx="2" ry="2"></rect>
              <circle cx="9" cy="9" r="2"></circle>
              <path d="m21 15-3.086-3.086a2 2 0 0 0-2.828 0L6 21"></path>
            </svg>
          </div>
          <div class="absolute inset-0 flex flex-col justify-end p-6">
            <h2 class="text-lg font-medium group-hover:underline">{category.name}</h2>
            <p class="text-sm text-muted-foreground mt-1">{category.description}</p>
            <p class="text-sm text-muted-foreground mt-2">{category.productCount} products</p>
          </div>
        </a>
      ))}
    </div>
  </div>
</Layout>
