                        </div>
                        {addr.recipientName && (
                          <p class="text-sm text-muted-foreground mt-1">{addr.recipientName}</p>
                        )}
                        <p class="text-sm text-muted-foreground">{addr.address1}</p>
                        {addr.address2 && <p class="text-sm text-muted-foreground">{addr.address2}</p>}
                        <p class="text-sm text-muted-foreground">
                          {addr.city}{addr.state ? `, ${addr.state}` : ""} {addr.postalCode}
                        </p>
                        <p class="text-sm text-muted-foreground">{addr.country}</p>
                      </div>
