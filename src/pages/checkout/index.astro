                  <label class="billing-address-option flex items-start gap-3 p-4 border cursor-pointer hover:border-primary/50 transition-colors">
                    <input
                      type="radio"
                      name="billingAddressId"
                      value="new"
                      class="mt-0.5 w-4 h-4 text-primary border-input focus:ring-primary"
                    />
                    <div class="flex-1">
                      <span class="text-sm font-medium">Enter a new address</span>
                    </div>
                  </label>
                </div>
              </div>
