            <div class="space-y-4 mb-4">
              <div class="grid sm:grid-cols-2 gap-4">
                <div>
                  <label for="billingFirstName" class="text-sm font-medium">First name</label>
                  <input
                    id="billingFirstName"
                    name="billingFirstName"
                    type="text"
                    class="w-full mt-1.5 py-2.5 px-3 border border-input bg-background text-sm placeholder:text-muted-foreground focus:outline-none focus:ring-1 focus:ring-ring"
                  />
                </div>
                <div>
                  <label for="billingLastName" class="text-sm font-medium">Last name</label>
                  <input
                    id="billingLastName"
                    name="billingLastName"
                    type="text"
                    class="w-full mt-1.5 py-2.5 px-3 border border-input bg-background text-sm placeholder:text-muted-foreground focus:outline-none focus:ring-1 focus:ring-ring"
                  />
                </div>
              </div>
            </div>

            <div id="billing-form-fields" class={savedAddresses.length > 0 ? "hidden" : ""}>
              <div class="space-y-4">
                <div>
                  <label for="billingAddress1" class="text-sm font-medium">Address</label>
                  <input
                    id="billingAddress1"
                    name="billingAddress1"
                    type="text"
                    class="w-full mt-1.5 py-2.5 px-3 border border-input bg-background text-sm placeholder:text-muted-foreground focus:outline-none focus:ring-1 focus:ring-ring"
                  />
                </div>
                <div>
                  <label for="billingAddress2" class="text-sm font-medium">Apartment, suite, etc. (optional)</label>
                  <input
                    id="billingAddress2"
                    name="billingAddress2"
                    type="text"
                    class="w-full mt-1.5 py-2.5 px-3 border border-input bg-background text-sm placeholder:text-muted-foreground focus:outline-none focus:ring-1 focus:ring-ring"
                  />
                </div>
                <div class="grid sm:grid-cols-3 gap-4">
                  <div>
                    <label for="billingCity" class="text-sm font-medium">City</label>
                    <input
                      id="billingCity"
                      name="billingCity"
                      type="text"
                      class="w-full mt-1.5 py-2.5 px-3 border border-input bg-background text-sm placeholder:text-muted-foreground focus:outline-none focus:ring-1 focus:ring-ring"
                    />
                  </div>
                  <div>
                    <label for="billingState" class="text-sm font-medium">State</label>
                    <input
                      id="billingState"
                      name="billingState"
                      type="text"
                      class="w-full mt-1.5 py-2.5 px-3 border border-input bg-background text-sm placeholder:text-muted-foreground focus:outline-none focus:ring-1 focus:ring-ring"
                    />
                  </div>
                  <div>
                    <label for="billingPostalCode" class="text-sm font-medium">ZIP code</label>
                    <input
                      id="billingPostalCode"
                      name="billingPostalCode"
                      type="text"
                      class="w-full mt-1.5 py-2.5 px-3 border border-input bg-background text-sm placeholder:text-muted-foreground focus:outline-none focus:ring-1 focus:ring-ring"
                    />
                  </div>
                </div>
                <div>
                  <label for="billingCountry" class="text-sm font-medium">Country</label>
                  <input
                    id="billingCountry"
                    name="billingCountry"
                    type="text"
                    value="US"
                    class="w-full mt-1.5 py-2.5 px-3 border border-input bg-background text-sm placeholder:text-muted-foreground focus:outline-none focus:ring-1 focus:ring-ring"
                  />
                </div>
                <div>
                  <label for="billingPhone" class="text-sm font-medium">Phone (optional)</label>
                  <input
                    id="billingPhone"
                    name="billingPhone"
                    type="tel"
                    class="w-full mt-1.5 py-2.5 px-3 border border-input bg-background text-sm placeholder:text-muted-foreground focus:outline-none focus:ring-1 focus:ring-ring"
                  />
                </div>
              </div>

              <label class="flex items-center gap-2 mt-4 cursor-pointer">
                <input
                  type="checkbox"
                  id="saveBillingAddress"
                  name="saveBillingAddress"
                  class="w-4 h-4 text-primary border-input focus:ring-primary"
                />
                <span class="text-sm">Save this address for future orders</span>
              </label>
            </div>
          </div>
        </section>

        <!-- Customer Note -->
        <section>
          <h2 class="text-lg font-medium mb-6">Order Notes (optional)</h2>
          <textarea
            id="customerNote"
            name="customerNote"
            rows="3"
            placeholder="Any special instructions for your order..."
            class="w-full py-2.5 px-3 border border-input bg-background text-sm placeholder:text-muted-foreground focus:outline-none focus:ring-1 focus:ring-ring resize-none"
          ></textarea>
        </section>

        <button
          type="submit"
          id="place-order-btn"
          class="block w-full py-3 bg-primary text-primary-foreground text-sm font-medium text-center hover:bg-primary/90 disabled:opacity-50"
        >
          Place Order
        </button>
        <p id="error-message" class="text-sm text-red-600 hidden"></p>
      </div>

      <!-- Order Summary -->
      <div class="lg:col-span-5 xl:col-span-4">
        <div class="border p-6 lg:sticky lg:top-20">
          <h2 class="font-medium mb-8">Order Summary</h2>

          <div class="space-y-4 mb-6">
            {cartItems.map((item) => {
              const imageUrl = getImageUrl(item.product?.image);
              return (
                <div class="flex gap-4">
                  <div class="w-16 h-20 bg-muted shrink-0 flex items-center justify-center text-muted-foreground/30 relative overflow-hidden">
                    {imageUrl ? (
                      <img src={imageUrl} alt={item.product?.name} class="w-full h-full object-cover" />
                    ) : (
                      <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1" stroke-linecap="round" stroke-linejoin="round">
                        <rect width="18" height="18" x="3" y="3" rx="2" ry="2"></rect>
                        <circle cx="9" cy="9" r="2"></circle>
                        <path d="m21 15-3.086-3.086a2 2 0 0 0-2.828 0L6 21"></path>
                      </svg>
                    )}
                    <span class="absolute -top-2 -right-2 w-5 h-5 bg-muted-foreground text-background text-xs flex items-center justify-center rounded-full">{item.item.quantity}</span>
                  </div>
                  <div class="flex-1 min-w-0">
                    <p class="text-sm font-medium">{item.product?.name}</p>
                    {item.variant?.title && (
                      <p class="text-xs text-muted-foreground mt-0.5">{item.variant.title}</p>
                    )}
                  </div>
                  <p class="text-sm">${((item.price?.price || 0) * item.item.quantity).toFixed(2)}</p>
                </div>
              );
            })}
          </div>

          <div class="space-y-3 text-sm border-t pt-4">
            <div class="flex justify-between">
              <span class="text-muted-foreground">Subtotal</span>
              <span>${subtotal.toFixed(2)}</span>
            </div>
            <div class="flex justify-between">
              <span class="text-muted-foreground">Shipping</span>
              <span>{shipping === 0 ? "Free" : `$${shipping.toFixed(2)}`}</span>
            </div>
            <div class="flex justify-between">
              <span class="text-muted-foreground">Tax (est.)</span>
              <span>${tax.toFixed(2)}</span>
            </div>
          </div>

          <div class="flex justify-between pt-4 mt-4 border-t font-medium">
            <span>Total</span>
            <span>${total.toFixed(2)}</span>
          </div>
        </div>
      </div>
    </form>
  </div>
</Layout>

<style>
  input[type="radio"]:checked + div,
  label:has(input[type="radio"]:checked) {
    border-color: hsl(var(--primary));
    background-color: hsl(var(--primary) / 0.02);
  }
</style>

<script is:inline>
  const API_BASE = window.location.origin.includes('localhost') ? 'http://localhost:3000' : '';

  const form = document.getElementById('checkout-form');
  const submitBtn = document.getElementById('place-order-btn');
  const errorMsg = document.getElementById('error-message');

  // Shipping address elements
  const shippingFormFields = document.getElementById('shipping-form-fields');
  const shippingRadios = document.querySelectorAll('input[name="shippingAddressId"]');

  // Billing address elements
  const useDifferentBilling = document.getElementById('useDifferentBillingAddress');
  const billingSection = document.getElementById('billing-address-section');
  const billingFormFields = document.getElementById('billing-form-fields');
  const billingRadios = document.querySelectorAll('input[name="billingAddressId"]');

  // Required fields for each address type (excluding firstName/lastName which are always visible)
  const requiredShippingFields = ['shippingAddress1', 'shippingCity', 'shippingPostalCode', 'shippingCountry'];
  const requiredBillingFields = ['billingAddress1', 'billingCity', 'billingPostalCode', 'billingCountry'];

  // Helper to toggle required attribute on fields
  function setFieldsRequired(fieldIds, required) {
    fieldIds.forEach(id => {
      const el = document.getElementById(id);
      if (el) {
        if (required) {
          el.setAttribute('required', '');
        } else {
          el.removeAttribute('required');
        }
      }
    });
  }

  // Helper to fill address fields
  function fillAddressFields(prefix, data) {
    const fields = ['FirstName', 'LastName', 'Phone', 'Address1', 'Address2', 'City', 'State', 'PostalCode', 'Country'];
    const dataKeys = ['firstName', 'lastName', 'phone', 'address1', 'address2', 'city', 'state', 'postalCode', 'country'];

    fields.forEach((field, index) => {
      const el = document.getElementById(`${prefix}${field}`);
      if (el) {
        el.value = data[dataKeys[index]] || (field === 'Country' ? 'US' : '');
      }
    });
  }

  // Helper to clear address fields
  function clearAddressFields(prefix) {
    fillAddressFields(prefix, {});
  }

  // Helper to get address data from radio button
  function getAddressDataFromRadio(radio) {
    return {
      firstName: radio.dataset.firstName || '',
      lastName: radio.dataset.lastName || '',
      phone: radio.dataset.phone || '',
      address1: radio.dataset.address1 || '',
      address2: radio.dataset.address2 || '',
      city: radio.dataset.city || '',
      state: radio.dataset.state || '',
      postalCode: radio.dataset.postalCode || '',
      country: radio.dataset.country || 'US'
    };
  }

  // Handle shipping address selection
  shippingRadios.forEach(radio => {
    radio.addEventListener('change', (e) => {
      const selectedValue = e.target.value;

      // Update visual selection
      document.querySelectorAll('.shipping-address-option').forEach(label => {
        label.classList.remove('border-primary', 'bg-primary/5');
      });
      e.target.closest('label').classList.add('border-primary', 'bg-primary/5');

      if (selectedValue === 'new') {
        shippingFormFields.classList.remove('hidden');
        setFieldsRequired(requiredShippingFields, true);
        clearAddressFields('shipping');
      } else {
        shippingFormFields.classList.add('hidden');
        setFieldsRequired(requiredShippingFields, false);
        const data = getAddressDataFromRadio(e.target);
        fillAddressFields('shipping', data);
      }
    });
  });

  // Handle billing address toggle
  useDifferentBilling.addEventListener('change', (e) => {
    if (e.target.checked) {
      billingSection.classList.remove('hidden');
      // Check if billing form fields are visible (no saved addresses or "new" selected)
      const selectedBillingRadio = document.querySelector('input[name="billingAddressId"]:checked');
      const showBillingForm = !selectedBillingRadio || selectedBillingRadio.value === 'new';
      if (showBillingForm && !billingFormFields.classList.contains('hidden')) {
        setFieldsRequired(requiredBillingFields, true);
      }
    } else {
      billingSection.classList.add('hidden');
      setFieldsRequired(requiredBillingFields, false);
    }
  });

  // Handle billing address selection
  billingRadios.forEach(radio => {
    radio.addEventListener('change', (e) => {
      const selectedValue = e.target.value;

      // Update visual selection
      document.querySelectorAll('.billing-address-option').forEach(label => {
        label.classList.remove('border-primary', 'bg-primary/5');
      });
      e.target.closest('label').classList.add('border-primary', 'bg-primary/5');

      if (selectedValue === 'new') {
        billingFormFields.classList.remove('hidden');
        setFieldsRequired(requiredBillingFields, true);
        clearAddressFields('billing');
      } else {
        billingFormFields.classList.add('hidden');
        setFieldsRequired(requiredBillingFields, false);
        const data = getAddressDataFromRadio(e.target);
        fillAddressFields('billing', data);
      }
    });
  });

  // Initialize visual selection for checked radios
  document.querySelectorAll('input[name="shippingAddressId"]:checked, input[name="billingAddressId"]:checked').forEach(radio => {
    radio.closest('label').classList.add('border-primary', 'bg-primary/5');
  });

  // Initialize required states on page load
  const initialShippingRadio = document.querySelector('input[name="shippingAddressId"]:checked');
  if (initialShippingRadio && initialShippingRadio.value !== 'new') {
    // A saved address is selected, so form fields are hidden - remove required
    setFieldsRequired(requiredShippingFields, false);
  }
  // Billing fields are always hidden initially (billing section is hidden)
  setFieldsRequired(requiredBillingFields, false);

  // Form submission
  form.addEventListener('submit', async (e) => {
    e.preventDefault();
    submitBtn.disabled = true;
    submitBtn.textContent = 'Processing...';
    errorMsg.classList.add('hidden');

    const formData = new FormData(form);
    const useDifferentBillingAddress = formData.get('useDifferentBillingAddress') === 'on';

    // Get shipping address - firstName/lastName always from form, rest from saved address or form
    const selectedShippingRadio = document.querySelector('input[name="shippingAddressId"]:checked');
    let shippingAddress;

    if (selectedShippingRadio && selectedShippingRadio.value !== 'new') {
      const savedData = getAddressDataFromRadio(selectedShippingRadio);
      shippingAddress = {
        firstName: formData.get('shippingFirstName'),
        lastName: formData.get('shippingLastName'),
        phone: savedData.phone || undefined,
        address1: savedData.address1,
        address2: savedData.address2 || undefined,
        city: savedData.city,
        state: savedData.state || undefined,
        postalCode: savedData.postalCode,
        country: savedData.country,
      };
    } else {
      shippingAddress = {
        firstName: formData.get('shippingFirstName'),
        lastName: formData.get('shippingLastName'),
        phone: formData.get('shippingPhone') || undefined,
        address1: formData.get('shippingAddress1'),
        address2: formData.get('shippingAddress2') || undefined,
        city: formData.get('shippingCity'),
        state: formData.get('shippingState') || undefined,
        postalCode: formData.get('shippingPostalCode'),
        country: formData.get('shippingCountry'),
      };
    }

    // Get billing address if different - firstName/lastName always from form
    let billingAddress;
    if (useDifferentBillingAddress) {
      const selectedBillingRadio = document.querySelector('input[name="billingAddressId"]:checked');

      if (selectedBillingRadio && selectedBillingRadio.value !== 'new') {
        const savedData = getAddressDataFromRadio(selectedBillingRadio);
        billingAddress = {
          firstName: formData.get('billingFirstName'),
          lastName: formData.get('billingLastName'),
          phone: savedData.phone || undefined,
          address1: savedData.address1,
          address2: savedData.address2 || undefined,
          city: savedData.city,
          state: savedData.state || undefined,
          postalCode: savedData.postalCode,
          country: savedData.country,
        };
      } else {
        billingAddress = {
          firstName: formData.get('billingFirstName'),
          lastName: formData.get('billingLastName'),
          phone: formData.get('billingPhone') || undefined,
          address1: formData.get('billingAddress1'),
          address2: formData.get('billingAddress2') || undefined,
          city: formData.get('billingCity'),
          state: formData.get('billingState') || undefined,
          postalCode: formData.get('billingPostalCode'),
          country: formData.get('billingCountry'),
        };
      }
    }

    try {
      const response = await fetch(`${API_BASE}/api/checkout/`, {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        credentials: 'include',
        body: JSON.stringify({
          shippingAddress,
          billingAddress: useDifferentBillingAddress ? billingAddress : undefined,
          useDifferentBillingAddress,
          saveShippingAddress: formData.get('saveShippingAddress') === 'on',
          saveBillingAddress: formData.get('saveBillingAddress') === 'on',
          customerNote: formData.get('customerNote') || undefined,
        })
      });

      const data = await response.json();

      if (!response.ok) {
        throw new Error(data.error || 'Checkout failed');
      }

      // Redirect to success page with order ID
      window.location.href = `/checkout/success?orderId=${data.data.id}`;
    } catch (err) {
      errorMsg.textContent = err.message || 'Something went wrong. Please try again.';
      errorMsg.classList.remove('hidden');
      submitBtn.disabled = false;
      submitBtn.textContent = 'Place Order';
    }
  });
</script>
