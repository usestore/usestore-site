---
import Layout from "@/layouts/Layout.astro";
import { getCart, getImageUrl, type CartItem, getCustomerData, type CustomerAddress } from "@/lib/api";

export const prerender = false;

const { user } = Astro.locals;

if (!user) {
  return Astro.redirect("/auth/sign-in");
}

let cartItems: CartItem[] = [];
let savedAddresses: CustomerAddress[] = [];

try {
  const response = await getCart(Astro.request.headers.get("cookie") || "");
  cartItems = response.data.items || [];
} catch {
  // Ignore errors
}

try {
  const customerData = await getCustomerData(Astro.request.headers.get("cookie") || "");
  savedAddresses = customerData.addresses || [];
} catch {
  // Ignore errors
}

if (cartItems.length === 0) {
  return Astro.redirect("/cart");
}

const subtotal = cartItems.reduce((sum, item) => sum + (item.price?.price || 0) * item.item.quantity, 0);
const shipping = subtotal >= 100 ? 0 : 10;
const tax = subtotal * 0.08;
const total = subtotal + shipping + tax;

// Find default addresses
const defaultShippingAddress = savedAddresses.find(addr => addr.isDefaultShipping) || savedAddresses[0];
const defaultBillingAddress = savedAddresses.find(addr => addr.isDefaultBilling) || savedAddresses[0];
