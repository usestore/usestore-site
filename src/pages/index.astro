---
import Layout from "@/layouts/Layout.astro";
import { getProducts } from "@/lib/api/products";
import { getCollections, getCollectionProducts } from "@/lib/api/collections";
import { getCategories } from "@/lib/api/categories";

export const prerender = false;

const [featuredResponse, newArrivalsResponse, collectionsResponse, categoriesResponse] = await Promise.all([
  getProducts({ featured: true, perPage: 8 }),
  getCollectionProducts("new-arrivals", { perPage: 4 }),
  getCollections({ perPage: 2 }),
  getCategories({ perPage: 4 }),
]);

const featuredProducts = featuredResponse.data ?? [];
const newArrivals = newArrivalsResponse.data ?? [];
const collections = collectionsResponse.data ?? [];
const categories = categoriesResponse.data ?? [];
---

<Layout>
  <!-- Hero Section -->
  <section class="relative">
    <div class="aspect-[21/9] md:aspect-[3/1] bg-muted w-full relative overflow-hidden">
      <img
        src="/cover.jpg"
        alt="Store cover"
        class="absolute inset-0 w-full h-full object-cover"
      />
      <div class="absolute inset-0 bg-black/40"></div>
      <div class="absolute inset-0 flex items-center">
        <div class="container mx-auto px-4">
          <div class="max-w-2xl">
            <h1 class="text-3xl md:text-5xl font-medium text-white leading-tight">
              Quality essentials for everyday life
            </h1>
            <p class="mt-4 text-base md:text-lg text-white/80 max-w-lg">
              Discover timeless pieces crafted with care. Built to last, designed to inspire.
            </p>
            <div class="flex flex-col sm:flex-row gap-3 mt-8">
              <a
                href="/products"
                class="inline-flex items-center justify-center px-6 py-3 bg-white text-black text-sm font-medium hover:bg-white/90"
              >
                Shop Now
              </a>
              <a
                href="/collections"
                class="inline-flex items-center justify-center px-6 py-3 border border-white text-white text-sm font-medium hover:bg-white/10"
              >
                Browse Collections
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- New Arrivals -->
  <section class="border-t py-12 md:py-16">
    <div class="container mx-auto px-4">
      <div class="flex items-center justify-between mb-6">
        <h2 class="text-lg font-medium">New Arrivals</h2>
        <a href="/collections/new" class="text-sm text-muted-foreground hover:text-foreground underline underline-offset-4">
          View all
        </a>
      </div>
      <div class="grid grid-cols-2 md:grid-cols-4 gap-x-4 gap-y-8">
        {newArrivals.map((item) => (
          <a href={`/products/${item.product.slug}`} class="group">
            <div class="aspect-[3/4] bg-muted mb-3 relative overflow-hidden">
              {item.product.image ? (
                <img
                  src={item.product.image}
                  alt={item.product.name}
                  class="w-full h-full object-cover"
                />
              ) : (
                <div class="w-full h-full flex items-center justify-center text-muted-foreground/30">
                  <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1" stroke-linecap="round" stroke-linejoin="round">
                    <rect width="18" height="18" x="3" y="3" rx="2" ry="2"></rect>
                    <circle cx="9" cy="9" r="2"></circle>
                    <path d="m21 15-3.086-3.086a2 2 0 0 0-2.828 0L6 21"></path>
                  </svg>
                </div>
              )}
              {item.price?.compareAtPrice && (
                <span class="absolute top-2 left-2 bg-foreground text-background text-xs px-2 py-1">
                  Sale
                </span>
              )}
            </div>
            <h3 class="text-sm group-hover:underline">{item.product.name}</h3>
            <div class="flex items-center gap-2 mt-1">
              <p class="text-sm">${item.price?.price?.toFixed(2) ?? '0.00'}</p>
              {item.price?.compareAtPrice && (
                <p class="text-sm text-muted-foreground line-through">${item.price.compareAtPrice.toFixed(2)}</p>
              )}
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Featured Products -->
  <section class="py-12 md:py-16">
    <div class="container mx-auto px-4">
      <div class="flex items-center justify-between mb-6">
        <h2 class="text-lg font-medium">Featured Products</h2>
        <a href="/products" class="text-sm text-muted-foreground hover:text-foreground underline underline-offset-4">
          View all
        </a>
      </div>
      <div class="grid grid-cols-2 md:grid-cols-4 gap-x-4 gap-y-8">
        {featuredProducts.map((item) => (
          <a href={`/products/${item.product.slug}`} class="group">
            <div class="aspect-[3/4] bg-muted mb-3 relative overflow-hidden">
              {item.product.image ? (
                <img
                  src={item.product.image}
                  alt={item.product.name}
                  class="w-full h-full object-cover"
                />
              ) : (
                <div class="w-full h-full flex items-center justify-center text-muted-foreground/30">
                  <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1" stroke-linecap="round" stroke-linejoin="round">
                    <rect width="18" height="18" x="3" y="3" rx="2" ry="2"></rect>
                    <circle cx="9" cy="9" r="2"></circle>
                    <path d="m21 15-3.086-3.086a2 2 0 0 0-2.828 0L6 21"></path>
                  </svg>
                </div>
              )}
              {item.price?.compareAtPrice && (
                <span class="absolute top-2 left-2 bg-foreground text-background text-xs px-2 py-1">
                  Sale
                </span>
              )}
            </div>
            <h3 class="text-sm group-hover:underline">{item.product.name}</h3>
            <div class="flex items-center gap-2 mt-1">
              <p class="text-sm">${item.price?.price?.toFixed(2) ?? '0.00'}</p>
              {item.price?.compareAtPrice && (
                <p class="text-sm text-muted-foreground line-through">${item.price.compareAtPrice.toFixed(2)}</p>
              )}
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Collections Banner -->
  <section class="border-t">
    <div class="grid md:grid-cols-2">
      {collections.map((collection, index) => (
        <a
          href={`/collections/${collection.slug}`}
          class:list={[
            "relative aspect-[4/3] md:aspect-[16/9] group bg-muted overflow-hidden",
            index > 0 && "border-t md:border-t-0 md:border-l"
          ]}
        >
          {collection.image ? (
            <img
              src={collection.image}
              alt={collection.name}
              class="w-full h-full object-cover"
            />
          ) : (
            <div class="w-full h-full flex items-center justify-center text-muted-foreground/20">
              <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1" stroke-linecap="round" stroke-linejoin="round">
                <rect width="18" height="18" x="3" y="3" rx="2" ry="2"></rect>
                <circle cx="9" cy="9" r="2"></circle>
                <path d="m21 15-3.086-3.086a2 2 0 0 0-2.828 0L6 21"></path>
              </svg>
            </div>
          )}
          <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent flex flex-col justify-end p-6 md:p-8">
            <p class="text-xs uppercase tracking-wider text-white/80 mb-1">Collection</p>
            <h3 class="text-xl font-medium text-white group-hover:underline">{collection.name}</h3>
            {collection.description && (
              <p class="text-sm text-white/80 mt-1">{collection.description}</p>
            )}
            <span class="inline-block mt-3 text-sm text-white underline underline-offset-4">Shop collection</span>
          </div>
        </a>
      ))}
    </div>
  </section>

  <!-- Categories -->
  <section class="border-t py-12 md:py-16">
    <div class="container mx-auto px-4">
      <div class="flex items-center justify-between mb-6">
        <h2 class="text-lg font-medium">Shop by Category</h2>
        <a href="/categories" class="text-sm text-muted-foreground hover:text-foreground underline underline-offset-4">
          View all
        </a>
      </div>
      <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
        {categories.map((category) => (
          <a
            href={`/categories/${category.slug}`}
            class="aspect-square bg-muted relative overflow-hidden group"
          >
            {category.image ? (
              <img
                src={category.image}
                alt={category.name}
                class="w-full h-full object-cover"
              />
            ) : (
              <div class="w-full h-full flex items-center justify-center text-muted-foreground/20">
                <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1" stroke-linecap="round" stroke-linejoin="round">
                  <rect width="18" height="18" x="3" y="3" rx="2" ry="2"></rect>
                  <circle cx="9" cy="9" r="2"></circle>
                  <path d="m21 15-3.086-3.086a2 2 0 0 0-2.828 0L6 21"></path>
                </svg>
              </div>
            )}
            <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent flex items-end p-4">
              <span class="text-sm font-medium text-white group-hover:underline">{category.name}</span>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Promo Banner -->
  <section class="bg-foreground text-background">
    <div class="container mx-auto px-4 py-12 md:py-16">
      <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4">
        <div>
          <p class="text-xs uppercase tracking-wider opacity-70 mb-2">Limited Time</p>
          <h2 class="text-xl md:text-2xl font-medium">20% off your first order</h2>
          <p class="mt-1 text-sm opacity-70">Use code WELCOME at checkout</p>
        </div>
        <a
          href="/products"
          class="inline-block border border-background px-6 py-2.5 text-sm font-medium hover:bg-background/10"
        >
          Shop now
        </a>
      </div>
    </div>
  </section>
</Layout>
