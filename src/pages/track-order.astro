---
import Layout from "@/layouts/Layout.astro";

export const prerender = false;
---

<Layout title="Track Your Order - usestore">
  <div class="container mx-auto px-4 py-12 md:py-16">
    <div class="max-w-2xl mx-auto">
      <h1 class="text-2xl font-medium mb-2">Track Your Order</h1>
      <p class="text-sm text-muted-foreground mb-8">
        Enter your order number and email to track your shipment
      </p>

      <div class="border p-6 md:p-8">
        <form class="space-y-4" method="GET" action="/orders">
          <div>
            <label for="order-number" class="text-sm font-medium mb-2 block">
              Order Number
            </label>
            <input
              type="text"
              id="order-number"
              name="id"
              placeholder="ORD-2024-001"
              required
              class="w-full py-2.5 px-3 border border-input bg-background text-sm placeholder:text-muted-foreground focus:outline-none focus:ring-1 focus:ring-ring"
            />
          </div>

          <div>
            <label for="email" class="text-sm font-medium mb-2 block">
              Email Address
            </label>
            <input
              type="email"
              id="email"
              name="email"
              placeholder="you@example.com"
              required
              class="w-full py-2.5 px-3 border border-input bg-background text-sm placeholder:text-muted-foreground focus:outline-none focus:ring-1 focus:ring-ring"
            />
          </div>

          <button
            type="submit"
            class="w-full py-2.5 bg-primary text-primary-foreground text-sm font-medium hover:bg-primary/90"
          >
            Track Order
          </button>
        </form>
      </div>

      <div class="mt-8 p-6 bg-muted/30 border">
        <h2 class="text-sm font-medium mb-4">Need Help?</h2>
        <p class="text-sm text-muted-foreground mb-4">
          If you're having trouble tracking your order, we're here to help.
        </p>
        <div class="flex flex-col sm:flex-row gap-3">
          <a href="/contact" class="inline-block py-2.5 px-6 bg-primary text-primary-foreground text-sm font-medium hover:bg-primary/90 text-center">
            Contact Support
          </a>
          <a href="/orders" class="inline-block py-2.5 px-6 border border-input text-sm font-medium hover:bg-muted text-center">
            View All Orders
          </a>
        </div>
      </div>
    </div>
  </div>
</Layout>
